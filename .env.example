# ===========================================
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# Database
DATABASE_URL="file:./dev.db"

# Google Maps API Key (from Google Cloud Console)
# https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY="your-google-maps-api-key-here"

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-here"

# Allowed Telegram user ID(s) for bot access
ALLOWED_TELEGRAM_USER_ID="your-telegram-user-id"

# Secret for /api/ingest endpoint
INGEST_SECRET="generate-a-random-string-here"

# Secret for admin operations
ADMIN_SECRET="generate-another-random-string-here"

# Base URL for the app (used by bot)
BASE_URL="http://localhost:3000"
